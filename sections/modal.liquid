{% for block in section.blocks %}
<modal-opener class="product-popup-modal__opener no-js-hidden quick-add-hidden" data-modal="#PopupModal-{{ block.id }}">
  <button id="ProductPopup-{{ block.id }}">modal opener</button>
</modal-opener>

<modal-dialog id="PopupModal-{{ block.id }}" class = "product-popup-modal">
  <div role="dialog" aria-label="Pop-up link text" aria-modal="true" class="product-popup-modal__content" tabindex="-1">
        <button id="ModalClose-{{ block.id }}" type="button" class="product-popup-modal__toggle" aria-label="Close">
            Close
        </button>
        <div class="product-popup-modal__content-info">
          
          <h1>Hello World</h1>
          
        </div>
  </div>
</modal-dialog>

{% endfor %}




{% schema %}
  {
    "name": "Modal-try",
    "settings": [
      {
        "type":"text",
        "id":"heading",
        "label":"Main Heading",
        "default":"Testimonials"
      }
    ],
    "blocks":[
      {
        "type":"image",
        "name":"Custom block",
        "settings":[
          {
            "type":"image_picker",
            "id":"block_image",
            "label":"Enter user image"
          },
          {
            "type":"text",
            "id":"blocktext",
            "label":"testimonial",
            "default":"Enter User Testimonials"
          }
        ]
      }
    ],
    "presets":[{
      "category":"modal",
      "name":"Modal section"
    }]
  }
{% endschema %}