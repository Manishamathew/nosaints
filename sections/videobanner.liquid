<div class="main-container">
  {% if section.settings.image %}
    <div class="img-container">
      <img src="{{ section.settings.image | img_url: 'large' }}" />
    </div>
  
    {% else %}
    <div class="video-container">
      <video width="100%" height="500" controls>
        <source src="{{ section.settings.video_link }}" type="video/mp4">
      </video>
    </div>
  
     <div class="video-container-mobile">
      <video width="100%" height="500" controls>
        <source src="{{ section.settings.video_link_mobile }}" type="video/mp4">
      </video>
    </div>

  
   
  {% endif %}
  
    <div class = "text-container">
      <h1>{{ section.settings.title | escape }}</h1>
       <p>{{ section.settings.text | escape }}</p>
        <a href="{{ section.settings.button_link }}">
          <button>{{ section.settings.button_label }}</button>
        </a>
    </div>

 
</div>



{% style %}
  .img-container {
    width:100%;
  }
  
  .img-container img{
    width:100%;
    height:500;
  }

  .main-container{
    position:relative;
  }

  .text-container{
    position:absolute;
    top:40%;
    left:18%;
    width:49%;
  }
  .text-container h1{
    color:white;

  }
  .video-container-mobile{
     
      display:none;
  }
   .text-container p{
    color:white;

  }
  .text-container button{
    background-color:red;
    color:white;
    width:100px;
    height:37px;
  }

  @media screen and (max-width: 600px) {
  
    .video-container {
        display:none;
      }
    .video-container-mobile{
      display:block;
    }
    }
  
{% endstyle %}



{% schema %}
{
  "name": "Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "video_link",
      "label": "Video for Desktop"
    },
     {
      "type": "url",
      "id": "video_link_mobile",
      "label": "Video for Mobile"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
    "type": "text",
    "id": "text",
    "label": "Description"
    },
   
    {
      "type": "text",
      "id": "button_label",
      "label": "Button"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "category": "Video",
      "name": "Video Banner Section"
    }
  ]
}
{% endschema %}